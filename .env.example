# Vibe Kanban Environment Variables
# Copy this file to .env for local development

# Server Configuration
PORT=3001

# Frontend Development server port (default: 3000)
# VITE_PORT=3000

# CORS Configuration
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Node Environment
NODE_ENV=development

# API Keys
# KIRO API Key for external service integration
KIRO_API_KEY=your_kiro_api_key_here

# Database Configuration
DATABASE_PATH=./data/kanban.db

# API endpoints (if needed)
# VITE_API_URL=http://localhost:3001

# WebSocket server URL (used by frontend)
VITE_SOCKET_URL=http://localhost:3001

# Enable debug mode
# VITE_DEBUG=false

# Logging Configuration
# LOG_LEVEL: DEBUG, INFO, WARN, ERROR (default: INFO)
LOG_LEVEL=INFO
