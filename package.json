    "test:perf:websocket:light": "CONNECTIONS=10 MESSAGES=5 node tests/performance/websocket-load-test.js",
    "test:perf:websocket:heavy": "CONNECTIONS=100 MESSAGES=20 node tests/performance/websocket-load-test.js"
